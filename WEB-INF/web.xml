        <servlet-name>AdminDao</servlet-name>
        <url-pattern>/AdminDao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReporterController</servlet-name>
        <url-pattern>/ReporterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewsController</servlet-name>
        <url-pattern>/NewsController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
        </welcome-file-list>
</web-app>
