    </servlet>
    <servlet>
        <servlet-name>AdminDao</servlet-name>
        <servlet-class>com.daos.AdminDao</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReporterController</servlet-name>
        <servlet-class>com.controllers.ReporterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewsController</servlet-name>
        <servlet-class>com.controllers.NewsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PersonController</servlet-name>
        <url-pattern>/PersonController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JsonController</servlet-name>
        <url-pattern>/JsonController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubscriberDao</servlet-name>
        <url-pattern>/SubscriberDao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReporterDao</servlet-name>
        <url-pattern>/ReporterDao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewsCategoryDao</servlet-name>
        <url-pattern>/NewsCategoryDao</url-pattern>
